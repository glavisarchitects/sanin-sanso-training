<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="sale_order_approval_winzard_view_form" model="ir.ui.view">
            <field name="name">sale.order.approval.winzard.view.form</field>
            <field name="model">sale.order.approval.winzard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="x_deadline"/>
                            <field name="x_comment" widget="text"/>
                        </group>
                        <group>
                            <field name="x_judgment"/>
                            <field name="x_reason" widget="text"/>
                        </group>
                        <footer>
                            <button name="x_request_approval_action" type="object" string="申請" class="oe_highlight"/>
                            <button name="x_decision_action" type="object" string="決定" class="oe_highlight"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
