<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="sale_order_quotation_form" model="ir.ui.view">
            <field name="name">sales.order.quotation.approval.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_quotation_send']" position="after">
                    <button name="action_request_quotation_approval"
                            string="Request Approval"
                            type="object" attrs="{'invisible':[('state','not in',['draft'])]}"/>

                    <button name="action_approve_quotation"
                            string="Approve Approval"
                            type="object" attrs="{'invisible':['|', ('approver_id','=','user.id'),('state','not in',['approval_requested'])]}"/>
                    <button name="action_quotation_send" string="Send by Email" type="object" states="approved" class="btn-primary"/>
                    <button name="action_confirm"
                            string="Confirm" type="object"
                            attrs="{'invisible': [('state', 'not in', ['approved'])]}"/>
                </xpath>

                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,approval_requested,rejected,approved,sent,sale"/>
                </xpath>

                <xpath expr="//field[@name='validity_date']" position="before">
                    <field name="x_organization_id" string="支店名"/>
                </xpath>
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_uom']"
                       position="after">
                    <field name="x_shipping_information" optional="show"/>
                </xpath>
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='tax_id']"
                       position="after">
                    <field name="x_campaign" optional="show"/>
                </xpath>
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='discount']"
                       position="after">
                    <field name="x_expected_delivery_date" optional="show"/>
                </xpath>
                <xpath expr="//page[@name='other_information']" position="after">
                    <page name="quotation_approval" string="申請状況" attrs="{'invisible': [['state','=','draft']]}">
                        <form>
                            <sheet>
                                <group string="Request Approval">
                                    <field name="approver_id" readonly="1"/>
                                    <field name="x_deadline" readonly="1"/>
                                    <field name="x_remark" widget="text" readonly="1"/>
                                </group>
                                <group string="Manager Approval">
                                    <field name="x_state" widget="selection" readonly="1"/>
                                    <field name="x_reason" widget="text" readonly="1"/>
                                </group>
                            </sheet>
                        </form>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="_view_tree" model="ir.ui.view">
            <field name="name">sale_approval_view_tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="x_state"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>