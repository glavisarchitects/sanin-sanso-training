<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="sale_order_quotation_approval_request_wizard_form" model="ir.ui.view">
            <field name="name">sale.order.quotation.approval.request.wizard</field>
            <field name="model">sale.quotation.approval.request.wizard</field>
            <field name="arch" type="xml">
                <form string="Request Approval">
                    <group class="oe_title">
                        <field name="approver_id"/>
                        <field name="x_deadline"/>
                        <field name="x_remark" widget="text"/>
                    </group>
                    <footer>
                        <button name="action_request" string="Request Approval" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="sale_order_quotation_approval" model="ir.actions.act_window">
            <field name="name">Request Approval</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.quotation.approval.request.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sale_order_quotation_approval_request_wizard_form"/>
            <field name="target">new</field>
        </record>

        <record id="sale_order_quotation_approve_wizard_form" model="ir.ui.view">
            <field name="name">sale.order.quotation.approve.wizard</field>
            <field name="model">sale.quotation.approve.wizard</field>
            <field name="arch" type="xml">
                <form string="Approve Request">
                    <group class="oe_title">
                        <field name="x_state"/>
                        <field name="x_reason"/>
                    </group>
                    <footer>
                        <button name="action_approve" string="Approve" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="sale_order_quotation_approve" model="ir.actions.act_window">
            <field name="name">Approve Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.quotation.approve.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sale_order_quotation_approve_wizard_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
