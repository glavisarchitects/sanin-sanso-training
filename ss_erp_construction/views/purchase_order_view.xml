<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ss_erp_construction_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">ss_erp_construction_purchase_order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_create_invoice'][1]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('x_bis_categ_id','=','construction'),'|', ('state', 'not in', ('purchase',
                        'done')), ('invoice_status', 'in', ('no', 'invoiced'))]}
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='action_create_invoice'][2]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('x_bis_categ_id','=','construction'),'|', '|', ('state', 'not in', ('purchase', 'done')), ('invoice_status', 'not in', ('no', 'invoiced')), ('order_line', '=', [])]}
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="before">
                    <button name="%(ss_erp_construction.action_view_construction_po_advance_payment_inv)d" string="請求書作成"
                            type="action" class="btn-primary"
                            context="{'open_invoices': True}"
                            attrs="{'invisible': [('state', 'not in', ['purchase'])]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>