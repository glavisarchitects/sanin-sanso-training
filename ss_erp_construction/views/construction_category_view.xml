<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ss_erp_construction_category_tree_view" model="ir.ui.view">
            <field name="name">ss_erp_construction_category.tree</field>
            <field name="model">ss_erp.construction.category</field>
            <field name="arch" type="xml">
                <tree string="工事種別" editable="bottom">
                    <field name="name" required="1"/>
                    <field name="memo"/>
                </tree>
            </field>
        </record>

        <record id="ss_erp_construction_category_search_view" model="ir.ui.view">
            <field name="name">ss_erp_construction_category.search</field>
            <field name="model">ss_erp.construction.category</field>
            <field name="arch" type="xml">
                <search string="工事種別">
                    <field name="name"/>
                    <field name="memo"/>
                </search>
            </field>
        </record>

        <record id="ss_erp_construction_category_act_window" model="ir.actions.act_window">
            <field name="name">工事種別</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ss_erp.construction.category</field>
            <field name="view_mode">tree</field>
        </record>


    </data>
</odoo>