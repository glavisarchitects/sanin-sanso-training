<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="res_organization_view_form" model="ir.ui.view">
            <field name="name">res.organization.view.form</field>
            <field name="model">x.x_company_organization.res_org</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title">
                            <label for="company_id" string="会社"/>
                            <field name="company_id" groups="base.group_no_one,base.group_erp_manager"/>
                            <h1>
                                <label for="name" string="組織名称"
                                       attrs="{'invisible': [('id', '!=', False)]}"/>
                                <field name="name" required="1"/>
                            </h1>
                            <group>
                                <group>
                                    <field name="x_code"/>
                                </group>
                            </group>
                        </div>
                        <group>
                            <group>
                                <field name="x_organization_categ_id"/>
                                <field name="parent_id" required="1"/>
                            </group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="partner_id" readonly="1" required="0" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <!--                            <page name="info" string="General Information">-->
                            <page name="info" string="一般情報">
                                <group>
                                    <group>

                                        <label for="street" string="組織所在アドレス"/>
                                        <div class="o_address_format">
                                            <field name="zip" class="o_address_zip" placeholder="郵便番号"
                                                   style="width:30%"/>
                                            <field name="state_id" class="o_address_state" style="width:33%"
                                                   placeholder="都道府県"
                                                   context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                            <field name="city" class="o_address_city" placeholder="市区町村"
                                                   style="width:33%"/>
                                            <field name="street" class="o_address_street" placeholder="町名番地"/>
                                            <field name="street2" class="o_address_street" placeholder="町名番地2"/>
                                            <field name="country_id" placeholder="Country" class="o_address_country"
                                                   readonly="1"/>
                                        </div>
                                    </group>
                                    <group>
                                        <field name="x_company_name" invisible="1"/>
                                        <field name="x_company_code" invisible="1"/>
                                        <label for="x_organization_manager_id" invisible="1"/>
                                        <div class="o_row" invisible="1">
                                            <field name="x_organization_manager_id"/>
                                            <button name="action_assign_manager" type="object" string="Assign"
                                                    class="oe_link"
                                                    attrs="{'invisible': [('x_organization_manager_id', '!=', False)]}"/>
                                        </div>
                                        <field name="phone" string="組織代表Tel" widget="phone"/>
                                        <field name="x_fax_number" string="組織代表Fax"/>
                                    </group>
                                </group>
                            </page>
                            <!-- <page name="employees" string="Employees" invisible="1">
                                <field name="x_employee_ids" widget="many2many" options="{'not_delete': True}">
                                    <kanban quick_create="false" create="true" delete="true">
                                        <field name="id"/>
                                        <field name="name"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click" style="max-width: 200px">
                                                    <div class="o_kanban_record_top">
                                                        <img t-att-src="kanban_image('hr.employee', 'image_128', record.id.raw_value)"
                                                            class="oe_avatar oe_kanban_avatar_smallbox o_image_40_cover mb0"
                                                            alt="Avatar"/>
                                                        <div class="o_kanban_record_headings ml8">
                                                            <strong class="o_kanban_record_title">
                                                                <field name="name"/>
                                                            </strong>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page> -->
                            <!--                            Sale Information-->
                            <page name="sale" string="販売情報">
                                <group>
                                    <group string="販売担当者">
                                        <field name="x_sale_pic_ids" nolabel="1">
                                            <tree>
                                                <field name="department_id"/>
                                                <field name="name"/>
                                                <field name="job_title"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group string="販売地域">
                                        <field name="x_sale_area" nolabel="1"/>
                                    </group>
                                </group>
                                <!-- <group invisible="1">
                                    <group string="Team In Charge">
                                        <field name="x_sale_tic_id" />
                                    </group>
                                    <group string="Place of Receipt">
                                        <field name="x_sale_stock_warehouse_id" />
                                        <field name="x_sale_stock_location_id" />
                                    </group>
                                </group> -->
                            </page>
                            <!--                            Purchase Information-->
                            <page name="purchase" string="購買情報">
                                <group>
                                    <group string="購買担当者">
                                        <field name="x_purchase_pic_ids" nolabel="1">
                                            <tree>
                                                <field name="department_id"/>
                                                <field name="name"/>
                                                <field name="job_title"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group string="Purchase Area" invisible="1">
                                        <field name="x_purchase_area"/>
                                    </group>
                                    <group string="納品場所">
                                        <field name="x_purchase_stock_location_id" nolabel="1"/>
                                    </group>
                                </group>
                                <!-- <group invisible="1">
                                    <group string="Team In Charge">
                                        <field name="x_purchase_tic_id" />
                                    </group>
                                    <group string="Location of Delivery">
                                        <field name="x_purchase_stock_warehouse_id" />
                                        <field name="x_purchase_stock_location_id" />
                                    </group>
                                </group> -->
                            </page>
                            <!--                            Inventory Information-->
                            <page name="inventory" string="在庫情報">
                                <group>
                                    <group name="stock_pic_ids" string="入出荷担当者">
                                        <field name="x_stock_pic_ids" nolabel="1" no_create="1">
                                            <tree>
                                                <field name="department_id"/>
                                                <field name="name"/>
                                                <field name="job_title"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group name="arrival_points" string="入荷ポイント">
                                        <field name="x_arrival_location_ids" nolabel="1" no_create="1">
                                            <tree>
                                                <field name="name"/>
                                            </tree>
                                        </field>
                                    </group>
                                </group>
                                <group>
                                    <group></group>
                                    <group name="shipping_points" string="出荷ポイント">
                                        <field name="x_shipping_location_ids" nolabel="1" no_create="1">
                                            <tree>
                                                <field name="name"/>
                                            </tree>
                                        </field>
                                    </group>
                                </group>
                                <group>
                                    <group></group>
                                    <group name="profit_center" string="利益センタ">
                                        <field name="x_profit_center_id" nolabel="1" no_create="1"/>
                                    </group>
                                </group>
                                <group>
                                    <group></group>
                                    <group name="cost_center" string="原価センタ">
                                        <field name="x_cost_center_id" nolabel="1" no_create="1"/>
                                    </group>
                                </group>
                                <group>
                                    <group></group>
                                    <group>
                                        <div>
                                            <field name="x_evaluation_unit" nolabel="1"/>
                                            <span class="o_horizontal_separator">評価単位</span>
                                        </div>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="res_organization_view_tree" model="ir.ui.view">
            <field name="name">res.organization.view.tree</field>
            <field name="model">x.x_company_organization.res_org</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="company_id" />
                    <field name="x_code"/>
                    <field name="x_complete_name" string="組織名称"/>
                    <field name="parent_id"/>
                    <!--                    <field name="x_organization_categ_id" optional="hide"/>-->
                    <!--                    <field name="x_organization_manager_id" optional="hide"/>-->
                    <!--                    <field name="x_sale_area" optional="hide"/>-->
                    <!--                    <field name="x_purchase_area" optional="hide"/>-->
                </tree>
            </field>
        </record>

        <record id="res_organization_view_search" model="ir.ui.view">
            <field name="name">res.organization.view.search</field>
            <field name="model">x.x_company_organization.res_org</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="x_code"/>
                    <field name="x_organization_categ_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="x_organization_manager_id"/>
                    <field name="x_sale_area"/>
                    <field name="x_purchase_area"/>
                    <filter name="ftr_not_have_manager" string="Not Have Manager"
                            domain="[('x_organization_manager_id', '=', False)]"/>
                    <separator/>
                    <filter name="ftr_archived" string="Archived" domain="[('active', '=', False)]"/>
                    <group string="Group By" expand="0">
                        <filter name="grp_org_categ" string="Org. Categories"
                                context="{'group_by': 'x_organization_categ_id'}"/>
                        <filter name="grp_company" string="Companies"
                                groups="base.group_multi_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_organizations" model="ir.actions.act_window">
            <!--            <field name="name">Organizations</field>-->
            <field name="name">組織</field>
            <field name="res_model">x.x_company_organization.res_org</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    新規組織の作成ボタンをクリックしてください.
                </p>
            </field>
        </record>

        <!--        <menuitem id="menu_organization_settings" name="Organizations"-->
        <!--            parent="base.menu_users" action="action_organizations" />-->

        <!--        <menuitem id="menu_organization_hr_config" name="Organizations"-->
        <!--            parent="hr.menu_human_resources_configuration" action="action_organizations" />-->
        <menuitem id="menu_organization_settings" name="組織"
                  parent="base.menu_users" action="action_organizations"/>

        <menuitem id="menu_organization_hr_config" name="組織"
                  parent="hr.menu_human_resources_configuration" action="action_organizations"/>

    </data>
</odoo>
