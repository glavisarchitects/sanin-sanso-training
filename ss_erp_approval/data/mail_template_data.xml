<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="message_multi_approver_assigned">
            <div style="margin: 0px; padding: 0px; font-size: 13px;">
                <div t-if="request">
                    <t t-if="request.request_owner_id">申請者:
                        <span t-field="request.request_owner_id.name"/>
                    </t>
                    <t t-if="request.x_department_id">, 申請部署:
                        <span t-field="request.x_department_id.name"/>
                    </t>
                </div>
                <div t-if="approver">
                    <t t-if="approver">承認者:
                        <span t-field="approver.name"/>
                    </t>
                    <t t-if="approver">, 承認日:
                        <span t-esc="approver_date"/>
                    </t>
                </div>
                <div t-if="partner">
                    <t t-if="partner">連絡先コード:
                        <span t-field="partner.ref"/>
                    </t>
                    <t t-if="partner">, 連絡先名称:
                        <span t-field="partner.name"/>
                    </t>
                </div>
                <div t-if="request.request_status == 'refused'">
                    <t t-if="reject_date">却下日:
                        <span t-esc="reject_date"/>
                    </t>
                </div>
                <div t-if="request.request_status == 'refused'">
                    却下理由:
                    <span t-field="request.x_reject"/>
                </div>
                <p style="margin: 16px 0px 16px 0px;">
                    <a t-att-href="access_link" t-att-data-oe-model="request._name" t-att-data-oe-id="request.id"
                       style="background-color:#875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px;">
                        View
                        <t t-esc="model_description or 'document'"/>
                    </a>
                </p>

                <t t-if="request.reason and request.request_status == 'pending' ">
                    Explanation :
                    <div style="margin-top: 8px;" t-field="request.reason"/>
                </t>
            </div>
        </template>
    </data>
</odoo>