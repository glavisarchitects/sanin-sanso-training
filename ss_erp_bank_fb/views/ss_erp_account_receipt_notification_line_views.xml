        <record id="ss_erp_account_receipt_notification_line_tree_view" model="ir.ui.view">
            <field name="name">ss_erp.account.receipt.notification.line.tree</field>
            <field name="model">ss_erp.account.receipt.notification.line</field>
            <field name="arch" type="xml">
                <tree string="全銀口座振替結果FB取込データ" create="0">
                    <field name="status" readonly="1"
                           widget="badge"
                           decoration-info="status=='success'"
                           decoration-warning="status=='wait'"
                           decoration-danger="status=='error'"/>
                    <field name="processing_date" readonly="1"/>
                    <field name="account_date" readonly="1"/>
                    <field name="starting_date" readonly="1"/>
                    <field name="transfer_client_name" readonly="1"/>
                    <field name="transfer_amount" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="ss_erp_account_receipt_notification_line_form_view" model="ir.ui.view">
            <field name="name">ss_erp.account.receipt.notification.line.form</field>
            <field name="model">ss_erp.account.receipt.notification.line</field>
            <field name="arch" type="xml">
                <form string="全銀口座振替結果FB取込データ">
                    <header>
                        <button name="processing_execution" string="消込実行" type="object"
                                class="oe_highlight"/>

                        <button name="search_account_move" string="検索" type="object"
                                class="oe_highlight"/>
                    </header>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <div style="padding:3px;border: 1px solid black;">
                                <p>検索項目</p>
                                <label for="partner_name_search" string="顧客"/>
                                <field name="partner_name_search"/>
                                <label for="total_amount_search" string="金額"/>
                                <field name="total_amount_search"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="account_date" readonly="1"/>
                            <field name="starting_date" readonly="1"/>
                            <field name="status" readonly="1"/>
                            <field name="transfer_client_name" readonly="1"/>
                        </group>
                        <group>
                            <field name="branch_id" readonly="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="transfer_amount" readonly="1"/>
                            <field name="payment_ids" widget="many2many_tags" readonly="1"
                                   attrs="{'invisible': [('payment_ids', '=', [])]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="請求書検索結果">
                            <field name="result_account_move_ids" attrs="{'readonly': [('status', '!=', 'wait')]}"
                                   options="{'no_open':True, 'no_create':True}"
                                   context="{'default_move_type': 'out_invoice',}"
                                   domain="[('state', '=', 'posted'), ('payment_state', '=', 'not_paid')]">
                                <tree>
                                    <field name="invoice_partner_display_name" string="番号"/>
                                    <field name="state"/>
                                    <field name="payment_state"/>
                                    <field name="partner_id" string="顧客"/>
                                    <field name="invoice_date" string="請求日"/>
                                    <field name="invoice_date_due" string="期日"/>
                                    <field name="activity_ids" string="次の活動"/>
                                    <field name="activity_ids" string="次の活動"/>
                                    <field name="company_id" string="会社"/>

                                    <field name="amount_untaxed_signed" string="Tax Excluded" sum="Total"
                                           optional="show"/>
                                    <field name="amount_tax_signed" string="Tax" sum="Total" optional="hide"/>
                                    <field name="amount_total_signed" string="Total" sum="Total" decoration-bf="1"
                                           optional="show"/>
                                    <field name="amount_residual_signed" string="Amount Due" sum="Amount Due"
                                           optional="hide"/>
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="action_account_receipt_notification_line" model="ir.actions.act_window">
            <field name="name">全銀振込入金通知ファイルのインポート</field>
            <field name="res_model">ss_erp.account.receipt.notification.line</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="ss_erp_account_receipt_notification_line_tree_view"/>
        </record>

    </data>
</odoo>

