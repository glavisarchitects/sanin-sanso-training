<odoo>
    <data>
        <!-- m2m selection view        -->
        <record id="x_transaction_selection_list_view" model="ir.ui.view">
            <field name="name">x_transaction_selection_list_view</field>
            <field name="model">x.transaction.classification</field>
            <field name="arch" type="xml">
                <tree string="Transaction Selection">
                    <field name="name" string="名称"/>
                    <field name="default"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="x_transaction_selection_form_view" model="ir.ui.view">
            <field name="name">x_transaction_selection_form_view</field>
            <field name="model">x.transaction.classification</field>
            <field name="arch" type="xml">
                <form string="Transaction Selection">
                    <field name="name" string="名称"/>
                    <field name="default"/>
                    <field name="description"/>
                </form>
            </field>
        </record>

        <record id="x_department_selection_list_view" model="ir.ui.view">
            <field name="name">x_department_selection_list_view</field>
            <field name="model">x.department.classification</field>
            <field name="arch" type="xml">
                <tree string="Transaction Selection">
                    <field name="name" string="名称"/>
                    <field name="default"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="x_department_selection_form_view" model="ir.ui.view">
            <field name="name">x_department_selection_form_view</field>
            <field name="model">x.department.classification</field>
            <field name="arch" type="xml">
                <form string="Transaction Selection">
                    <field name="name" string="名称"/>
                    <field name="default"/>
                    <field name="description"/>
                </form>
            </field>
        </record>

        <record id="x_transaction_selection_action" model="ir.actions.act_window">
            <field name="name">Transaction Selection</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.transaction.classification</field>
            <field name="view_mode">tree,form</field>
<!--            <field name="domain"></field>-->
        </record>

        <record id="x_department_selection_acion" model="ir.actions.act_window">
            <field name="name">Department Selection</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.department.classification</field>
            <field name="view_mode">tree,form</field>
<!--            <field name="domain"></field>-->
        </record>


        <menuitem id="x_transaction_selection_action_menu" parent="contacts.res_partner_menu_config"
                  action="x_transaction_selection_action" sequence="2" name="取引区分"/>

        <menuitem id="x_department_selection_acion_menu" parent="contacts.res_partner_menu_config"
                  action="x_department_selection_acion" sequence="3" name="取引部門"/>


    </data>
</odoo>
