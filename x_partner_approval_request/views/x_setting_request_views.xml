<odoo>
    <data>
        <record id="x_setting_request_list_view" model="ir.ui.view">
            <field name="name">x_setting_request_list_view</field>
            <field name="model">x.res.setting.request</field>
            <field name="arch" type="xml">
                <tree string="Setting Request">
                    <field name="step_approval"/>
                    <field name="branch_approver_id"/>
                    <field name="sale_hq_approver_ids"/>
                    <field name="account_hq_approver_ids"/>
                </tree>
            </field>
        </record>

        <record id="x_settingrequest_form_view" model="ir.ui.view">
            <field name="name">x_settingrequest_form_view</field>
            <field name="model">x.res.setting.request</field>
            <field name="arch" type="xml">
                <form string="Setting Request">
                    <header>
                    </header>

                    <sheet>
<!--                        <p style="font-weight:bold; font-size:18px">申請承認設定</p>-->
<!--                        <br/>-->
                        <p style="font-weight:bold; font-size:18px">仕入先登録承認設定</p>
                        <button name="show_list_aprover" type="object" string="承認者リスト"/>
                        <span>承認ステップ設定</span><field name="step_approval"/><span>ステップ</span>
                        <field name="branch_approver_id"/>
                        <field name="sale_hq_approver_ids" widget="many2many_tags"/>
                        <field name="account_hq_approver_ids" widget="many2many_tags"/>
                        <br/>
                        <p style="font-weight:bold; font-size:18px">得意先登録承認設定</p>
                    </sheet>

                </form>

            </field>
        </record>

        <record id="setting_request_menu_action" model="ir.actions.act_window">
            <field name="name">申請承認設定</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.res.setting.request</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>


<!--        <menuitem id="root_setting_request_menu" parent="contacts.menu_contacts" sequence="2" name="設定"/>-->

        <menuitem id="setting_request_menu" parent="contacts.res_partner_menu_config" name="申請承認設定"
                  action="setting_request_menu_action" sequence="1"/>


    </data>
</odoo>
