<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="sale_order_response_approval_view_form" model="ir.ui.view">
            <field name="name">sale.order.response.approval.view.form</field>
            <field name="model">sale.order.response.approval</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="response" widget="radio" />
                            <field name="note" widget="text" attrs="{'required': [('response', '!=', 'approved')]}" />
                        </group>
                        <field name="sale_order_id" invisible="1" />
                        <footer>
                            <button name="accept" string="Response" type="object" class="oe_highlight" />
                            <button string="Cancel" special="cancel" />
                        </footer>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>
