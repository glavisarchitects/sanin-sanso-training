<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record
            id="action_report_purchaseorder"
            string="Purchase order"
            model="purchase.order" 
            report_type="qweb-pdf"
            file="ss_erp.report_purchaseorder"
            name="ss_erp.report_purchaseorder"
            print_report_name="'PO - %s' % (object.name)"
            paperformat="paperformat_purchaseorder_a4"
        />

        <record
            id="action_report_purchasequotation"
            string="Quotation request form"
            model="purchase.order" 
            report_type="qweb-pdf"
            file="ss_erp.report_purchasequotation"
            name="ss_erp.report_purchasequotation"
            print_report_name="'Request for Quotation - %s' % (object.name)"
            paperformat="paperformat_purchasequotation_a4"
        />

        <record id="purchase.action_report_purchase_order" model="ir.actions.report">
            <field name="binding_model_id" eval="False"/>
        </record>
        <record id="purchase.report_purchase_quotation" model="ir.actions.report">
            <field name="binding_model_id" eval="False"/>
        </record>
</odoo>