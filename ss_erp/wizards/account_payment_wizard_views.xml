<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ss_erp_account_payment_wizard_wizard" model="ir.ui.view">
        <field name="name">account.payment.wizard.view.form</field>
        <field name="model">account.payment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="from_date"/>
                    <field name="to_date"  />
                    <field name="transfer_date" />
                </group>
                <footer>
                    <button name="zengin_general_transfer_fb" string="作成" type="object" class="oe_highlight" />
                    <button string="取消" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_account_payment_wizard" model="ir.actions.act_window">
        <field name="name">Zengin General Transfer FB creation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.payment.wizard</field>
        <field name="view_id" ref="ss_erp_account_payment_wizard_wizard" />
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>