<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='validity_date']" position="before">
                <field name="x_organization_id" required="1" options="{'no_open': True, 'no_quick_create': True}"/>
                <field name="x_responsible_dept_id" required="1" options="{'no_open': True, 'no_quick_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='pricelist_id']" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="required">0</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='tax_id']" position="after">
                <field name="x_pricelist" required="1"/>
                <field name="x_expected_delivery_date"/>
            </xpath>
        </field>
    </record>
</odoo>