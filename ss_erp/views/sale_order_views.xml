<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='validity_date']" position="before">
                <field name="x_organization_id" string="販売組織" required="1" options="{'no_open': True, 'no_quick_create': True}"/>
                <field name="x_responsible_dept_id" required="1" options="{'no_open': True, 'no_quick_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='pricelist_id']" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="required">0</attribute>
            </xpath>

            <field name="partner_id" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
                <attribute name="domain">[
                    '|',('company_id', '=', False),
                    ('company_id', '=', company_id),
                    ('x_is_customer', '=', True),
                    ]</attribute>
            </field>
            <button name="update_prices" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>

            <xpath expr="//label[@for='pricelist_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='tax_id']" position="after">
                <field name="x_is_required_x_pricelist" invisible="1"/>
                <field name="x_pricelist" attrs="{'required':[ ('x_is_required_x_pricelist', '=', True)]}"/>
                <field name="x_expected_delivery_date"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='discount']" position="after">
                <field name="x_remarks" attrs="{'required':[ ('discount', '!=', 0)]}"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="replace">
                <field name="product_id"
                       domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"
                       context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"
                       attrs="{
                                'readonly': [('product_updatable', '=', False)],
                                'required': [('display_type', '=', False)],
                            }"
                       options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"
                       force_save="1"
                       widget="many2one_barcode"
                />
            </xpath>
        </field>
    </record>


    <!--  Change context order  -->
    <record id="sale.action_orders" model="ir.actions.act_window">
        <field name="context">{'default_x_no_approval_required_flag': True}</field>
    </record>

    <!--Change context of quotation-->
    <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="context">{'default_x_no_approval_required_flag': False}</field>
    </record>
</odoo>