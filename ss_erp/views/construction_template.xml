<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ss_erp_construction_template_form_view" model="ir.ui.view">
            <field name="name">ss.erp.construction.form</field>
            <field name="model">construction.template</field>
            <field name="arch" type="xml">
                <form string="工事テンプレート">
                    <sheet>
                        <header>
                            <field name="state" widget="statusbar"/>
                        </header>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="code" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="template_lines" string="構成品">
                                <field name="template_line_ids" widget="one2many" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_qty"/>
                                        <field name="product_uom_id"/>
                                        <field name="operation_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="operation_lines" string="オペレーション">
                                <field name="operation_line_ids" widget="one2many" nolabel="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="workcenter_id"/>
                                        <field name="time_cycle"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ss_erp_construction_template_tree_view" model="ir.ui.view">
            <field name="name">ss.erp.construction.tree</field>
            <field name="model">construction.template</field>
            <field name="arch" type="xml">
                <tree string="工事テンプレート">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="ss_erp_construction_search_view" model="ir.ui.view">
            <field name="name">ss.erp.construction.search</field>
            <field name="model">construction.template</field>
            <field name="arch" type="xml">
                <search string="工事テンプレート">
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>

        <record id="ss_erp_construction_act_window" model="ir.actions.act_window">
            <field name="name">工事テンプレート</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="工事テンプレート" id="ss_erp_construction_menu" parent="ss_erp.ss_erp_construction_root_menu" sequence="200"
                  action="ss_erp_construction_act_window"/>

    </data>
</odoo>