<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="ss_erp_ifdb_autogas_file_header_view_search"
            model="ir.ui.view">
        <field name="name">ss_erp.ifdb.autogas.file.header.view.search</field>
        <field name="model">ss_erp.ifdb.autogas.file.header</field>
        <field name="arch" type="xml">
            <search string="オートガスPOS（松江）ファイル取込">
                <field name="upload_date" />
                <field name="name"
                       filter_domain="[('name', 'ilike', self)]" />
                <group string="Group By">
                    <filter name="flt_status"
                            string="Status"
                            context="{'group_by': 'status'}" />
                    <filter name="flt_branch"
                            string="Branch"
                            context="{'group_by': 'branch_id'}" />
                    <filter name="flt_user"
                            string="User"
                            context="{'group_by': 'user_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="ss_erp_ifdb_autogas_file_header_view_tree"
            model="ir.ui.view">
        <field name="name">ss_erp.ifdb.autogas.file.header.view.tree</field>
        <field name="model">ss_erp.ifdb.autogas.file.header</field>
        <field name="arch" type="xml">
            <tree string="オートガスPOS（松江）ファイル取込">
                <field name="upload_date" />
                <field name="name" />
                <field name="branch_id" />
                <field name="user_id" />
                <field name="status"
                       widget="badge"
                       decoration-info="status=='success'"
                       decoration-warning="status=='wait'"
                       decoration-danger="status=='error'" />
            </tree>
        </field>
    </record>

    <record id="ss_erp_ifdb_autogas_file_header_view_form"
            model="ir.ui.view">
        <field name="name">ss_erp.ifdb.autogas.file.header.view.form</field>
        <field name="model">ss_erp.ifdb.autogas.file.header</field>
        <field name="arch" type="xml">
            <form string="オートガスPOS（松江）ファイル取込">
                <header>
                    <button type="object"
                            name="action_processing_excution"
                            string="処理実行"
                            class="oe_highlight" />
                </header>
                <sheet>
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="upload_date" />
                            <field name="status" />
                        </group>
                        <group>
                            <field name="user_id" />
                            <field name="branch_id" />
                        </group>
                    </group>
                    <notebook>
                        <page name="data_records" string="データレコード">
                            <field name="autogas_data_record_ids">
                                <tree editable="bottom">
                                    <field name="status"
                                           widget="badge"
                                           decoration-info="status=='success'"
                                           decoration-warning="status=='wait'"
                                           decoration-danger="status=='error'" />
                                    <field name="id" />
                                    <field name="card_classification" />
                                    <field name="processing_division" />
                                    <field name="unused" />
                                    <field name="group_division" />
                                    <field name="actual_car_number" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ss_erp_ifdb_autogas_file_header_action"
            model="ir.actions.act_window">
        <field name="name">オートガスPOS（松江）ファイル取込</field>
        <field name="res_model">ss_erp.ifdb.autogas.file.header</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="ss_erp_ifdb_autogas_file_header_menu"
              name="オートガスPOS（松江）ファイル取込"
              action="ss_erp_ifdb_autogas_file_header_action"
              parent="ss_erp.external_system_cooperation_importing_performance"/>

</odoo>
