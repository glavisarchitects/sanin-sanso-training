<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="ss_erp_ifdb_autogas_file_data_rec_view_search"
            model="ir.ui.view">
        <field name="name">ss_erp.ifdb.autogas.file.data.rec.view.search</field>
        <field name="model">ss_erp.ifdb.autogas.file.data.rec</field>
        <field name="arch" type="xml">
            <search string="オートガスPOS（松江）取込データ">
                <field name="card_classification"
                       filter_domain="[('card_classification', 'ilike', self)]" />
                <field name="processing_division"
                       filter_domain="[('processing_division', 'ilike', self)]" />
                <field name="group_division"
                       filter_domain="[('group_division', 'ilike', self)]" />
                <group string="Group By">
                    <filter name="flt_status"
                            string="Status"
                            context="{'group_by': 'status'}" />
                    <filter name="flt_file_head"
                            string="File"
                            context="{'group_by': 'autogas_file_header_id'}" />
                    <filter name="flt_sale_order"
                            string="Sale Order"
                            context="{'group_by': 'sale_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="ss_erp_ifdb_autogas_file_data_rec_view_tree"
            model="ir.ui.view">
        <field name="name">ss_erp.ifdb.autogas.file.data.rec.view.tree</field>
        <field name="model">ss_erp.ifdb.autogas.file.data.rec</field>
        <field name="arch" type="xml">
            <tree string="オートガスPOS（松江）取込データ" editable="bottom">
                <field name="id" />
                <field name="processing_date" readonly="True"/>
                <field name="card_classification" readonly="True" optional="hide" />
                <field name="processing_division" readonly="True" optional="hide" />
                <field name="unused" readonly="True" optional="hide" />
                <field name="group_division" readonly="True" optional="hide" />
                <field name="actual_car_number" readonly="True" optional="hide" />
                <field name="card_number" readonly="True" optional="hide" />
                <field name="customer_code" readonly="True" optional="show"/>
                <field name="product_code" readonly="True" optional="hide" />
                <field name="data_no" readonly="True" optional="hide" />
                <field name="quantity_1" readonly="True" optional="hide" />
                <field name="unit_price" readonly="True" optional="hide" />
                <field name="amount_of_money" readonly="True" optional="hide" />
                <field name="staff_code" readonly="True" optional="hide" />
                <field name="processing_time" readonly="True" optional="hide" />
                <field name="calendar_date" readonly="True" optional="hide" />
                <field name="consumption_tax_output_classification" readonly="True" optional="hide" />
                <field name="consumption_tax" readonly="True" optional="hide" />
                <field name="credit_terminal_processing_serial_number" readonly="True" optional="hide" />
                <field name="credit_classification" readonly="True" optional="hide" />
                <field name="credit_data_no" readonly="True" optional="hide" />
                <field name="tax_classification_code" readonly="True" optional="hide" />
                <field name="filer1" readonly="True" optional="hide" />
                <field name="quantity_2" readonly="True" optional="hide" />
                <field name="filer2" readonly="True" optional="hide" />
                <field name="error_message" readonly="True" optional="hide" />
                <field name="customer_code" readonly="True" optional="hide"
                    groups="base.group_no_one" />
                <field name="validate_so" readonly="True" optional="hide"
                    groups="base.group_no_one" />
                <field name="status"
                       widget="badge"
                       decoration-info="status=='success'"
                       decoration-warning="status=='wait'"
                       decoration-danger="status=='error'" />
                <field name="autogas_file_header_id"
                       optional="hide" />
                <field name="sale_id"
                       optional="hide" />
            </tree>
        </field>
    </record>

    <record id="ss_erp_ifdb_autogas_file_data_rec_action"
            model="ir.actions.act_window">
        <field name="name">オートガスPOS（松江）取込データ</field>
        <field name="res_model">ss_erp.ifdb.autogas.file.data.rec</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
