<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ss_erp_product_major_classification_view_tree" model="ir.ui.view">
        <field name="name">ss_erp.product.major.classification.view.tree</field>
        <field name="model">ss_erp.product.major.classification</field>
        <field name="arch" type="xml">
            <tree editable="top" string="プロダクト大分類">
                <field name="major_classification_code" />
                <field name="name"/>
                <field name="remarks"/>
            </tree>
        </field>
    </record>


    <record id="ss_erp_product_major_classification_action" model="ir.actions.act_window">
        <field name="name">プロダクト大分類</field>
        <field name="res_model">ss_erp.product.major.classification</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="ss_erp_product_major_classification_view_tree"/>
        <field name="target">current</field>
    </record>

    <menuitem
            id="ss_erp_product_major_classification_menu"
            action="ss_erp_product_major_classification_action"
            parent="sale.product_menu_catalog"
            sequence="9"/>

</odoo>
