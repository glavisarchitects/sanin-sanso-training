<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ss_erp_construction_form_view" model="ir.ui.view">
            <field name="name">ss.erp.construction.form</field>
            <field name="model">ss.erp.construction</field>
            <field name="arch" type="xml">
                <form string="工事">
                    <header>
                        <button name="action_pending" string="保留" type="object"/>
                        <button name="action_receive_order" string="受注" type="object"/>
                        <button name="action_mark_lost" string="失注" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="工事名"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="organization_id"/>
                                <field name="responsible_dept_id"/>
                            </group>
                            <group>
                                <field name="plan_date"/>
                                <field name="user_id"/>
                                <field name="company_id"/>
                                <field name="all_margin_rate"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="construction_component" string="構成品">
                                <field name="construction_component_ids" widget="one2many" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="partner_id"/>
                                        <field name="payment_term_id"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="standard_price"/>
                                        <field name="currency_id" attrs="{'column_invisible':1}"/>
                                        <field name="construction_tax"/>
                                        <field name="construction_sale_price"/>
                                        <field name="margin" readonly="1"/>
                                        <field name="margin_rate" readonly="1"/>
                                    </tree>
                                </field>

                            </page>
                            <page name="construction_workorder" string="作業オーダー">
                                <field name="construction_wordorder_ids" widget="one2many" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="planned_labor_costs"/>
                                        <field name="result_labor_costs"/>
                                        <field name="planned_expenses"/>
                                        <field name="result_expenses"/>
                                        <field name="construction_work_notes"/>
                                        <field name="total_amount"/>
                                        <field name="date_planned_start"/>
                                        <field name="date_planned_finished"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                        <field name="duration_expected"/>
                                        <field name="duration"/>
                                        <field name="state"/>
                                        <field name="currency_id" attrs="{'column_invisible':1}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ss_erp_construction_tree_view" model="ir.ui.view">
            <field name="name">ss.erp.construction.tree</field>
            <field name="model">ss.erp.construction</field>
            <field name="arch" type="xml">
                <tree string="工事">
                    <field name="name"/>
                    <field name="organization_id"/>
                    <field name="responsible_dept_id"/>
                    <field name="plan_date"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="ss_erp_construction_search_view" model="ir.ui.view">
            <field name="name">ss.erp.construction.search</field>
            <field name="model">ss.erp.construction</field>
            <field name="arch" type="xml">
                <search string="工事">
                    <field name="name"/>
                    <group expand="0" string="Group By">
                        <filter name="organization" string="組織" context="{'group_by':'organization_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="ss_erp_construction_act_window" model="ir.actions.act_window">
            <field name="name">工事オーダー</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ss.erp.construction</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="ss_erp_construction_root_menu" name="工事" sequence="100"
                  web_icon="ss_erp,static/description/icon.png"/>

        <menuitem id="ss_erp_construction_menu" name="工事オーダー" parent="ss_erp.ss_erp_construction_root_menu"
                  action="ss_erp_construction_act_window"/>

    </data>
</odoo>