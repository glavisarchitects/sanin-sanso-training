<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_ss_erp" model="ir.ui.view">
            <field name="name">account.move.ss.erp</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_register_payment']" position="before">
                    <button name="svf_template_export"
                            attrs="{'invisible': ['|', ('move_type', '!=', 'out_invoice'), ('state', '!=', 'posted')]}"
                            string="帳票出力" class="oe_highlight" type="object"/>
                </xpath>

                <xpath expr="//field[@name='purchase_vendor_bill_id']" position="after">
                    <field name="x_payment_method"  attrs="{'invisible': [('move_type', 'not in', ('out_invoice','in_refund'))]}"/>
                    <field name="x_more_than_receipts_method" attrs="{'invisible': [('move_type', 'not in', ('out_invoice','out_refund'))]}"/>
                </xpath>
                <xpath expr="//group[@name='accounting_info_group']" position="after">
                    <group>
                        <field name="x_responsible_user_id"  required="1"/>
                        <field name="x_mkt_user_id" />
                        <field name="x_is_fb_created" groups="base.group_no_one"/>
                    </group>
                </xpath>
                <xpath expr="//group[@id='header_right_group']//div[@class='o_td_label']" position="before">
                    <field name="x_organization_id" required="1"/>
                    <field name="x_responsible_dept_id" required="1"/>
                </xpath>

                <xpath expr="//page[@id='invoice_tab']//tree//field[@name='account_id']" position="after">
                    <field name="x_sub_account_id" />
                </xpath>
                <xpath expr="//page[@id='aml_tab']//tree//field[@name='account_id']" position="after">
                    <field name="x_sub_account_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>