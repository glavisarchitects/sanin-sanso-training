<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TREE VIEW -->
    <record id="ss_erp_ifdb_powernet_saleshead_view_tree" model="ir.ui.view">
        <field name="name">ss_erp.ifdb.powernet.sales.head.view.tree</field>
        <field name="model">ss_erp.ifdb.powernet.sales.header</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="upload_date" />
                <field name="name" />
                <field name="branch_id" />
                <field name="user_id" />
                <field name="status" />
            </tree>
        </field>
    </record>
    <record id="ss_erp_ifdb_powernet_saleshead_view_form" model="ir.ui.view">
        <field name="name">ss_erp.ifdb.powernet.sales.head.view.form</field>
        <field name="model">ss_erp.ifdb.powernet.sales.header</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button name="processing_execution" string="Processing execution" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="upload_date" />
                            <field name="status" />
                        </group>
                        <group>
                            <field name="user_id" />
                            <field name="branch_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- ACTION -->
    <record id="ss_erp_ifdb_powernet_saleshead_action" model="ir.actions.act_window">
        <field name="name">PowerNet files Import</field>
        <field name="res_model">ss_erp.ifdb.powernet.sales.header</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- MENUITEM -->
    <menuitem id="menu_ss_erp_ifdb_powernet_saleshead"
              name="External system cooperation"
              parent="sale.sale_menu_root"
              action="ss_erp_ifdb_powernet_saleshead_action"
              sequence="5"
              groups="sales_team.group_sale_manager"/>
</odoo>