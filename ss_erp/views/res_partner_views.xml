                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="license_figure"/>
                                    <field name="license_flag_1"/>
                                    <field name="license_flag_2"/>
                                    <field name="license_number"/>
                                    <field name="license_period"/>
                                    <field name="active" invisible="1"/>
                                    <field name="partner_id" invisible="1"/>
                                </group>
                            </group>

                        </form>
