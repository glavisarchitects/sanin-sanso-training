<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="ss_erp_ifdb_propane_sales_header_tree" model="ir.ui.view">
        <field name="name">ss_erp.ifdb.propane.sales.header.tree</field>
        <field name="model">ss_erp.ifdb.propane.sales.header</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="upload_date"/>
                <field name="name"/>
                <field name="branch_id"/>
                <field name="user_id"/>
                <field name="status" decoration-danger="status == 'error'" decoration-success="status == 'success'" decoration-info="status == 'wait'" widget="badge" optional="show"/>
            </tree>
        </field>
    </record>
    <record id="_form" model="ir.ui.view">
        <field name="name">ss_erp.ifdb.propane.sales.header.form</field>
        <field name="model">ss_erp.ifdb.propane.sales.header</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button name="btn_processing_execution" type="object" string="Processing execution"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="upload_date"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="branch_id"/>
                        </group>
                    </group>
                    <field name="sales_detail_ids">
                        <tree editable="bottom">
                            <field name="status" decoration-danger="status == 'error'" decoration-success="status == 'success'" decoration-info="status == 'wait'" widget="badge" optional="show"/>
                            <field name="id" string='External ID'/>
                            <field name="processing_date"/>
                            <field name="external_data_type"/>
                            <field name="customer_branch_code"/>
                            <field name="customer_branch_sub_code"/>
                            <field name="customer_business_partner_code"/>
                            <field name="customer_business_partner_branch_code"/>
                            <field name="customer_delivery_code"/>
                            <field name="direct_branch_code"/>
                            <field name="direct_branch_sub_code"/>
                            <field name="direct_business_partner_code"/>
                            <field name="direct_business_partner_sub_code"/>
                            <field name="direct_delivery_code"/>
                            <field name="customer_name"/>
                            <field name="codeommercial_branch_code"/>
                            <field name="codeommercial_branch_sub_code"/>
                            <field name="codeommercial_product_code"/>
                            <field name="product_name"/>
                            <field name="standard_name"/>
                            <field name="standard"/>
                            <field name="amount_of_money"/>
                            <field name="unit_price_2"/>
                            <field name="unified_quantity"/>
                            <field name="order_number"/>
                            <field name="comment"/>
                            <field name="codeommercial_branch_code2"/>
                            <field name="amount_calculation_classification"/>
                            <field name="slip_processing_classification"/>
                            <field name="sale_id"/>
                            <field name="error_message"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ss_erp_ifdb_propane_sales_header_search" model="ir.ui.view">
        <field name="name">ss_erp.ifdb.propane.sales.header.search</field>
        <field name="model">ss_erp.ifdb.propane.sales.header</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="user_id"/>
                <field name="branch_id"/>
            </search>
        </field>
    </record>
    <record id="ss_erp_ifdb_propane_sales_header_action" model="ir.actions.act_window">
        <field name="name">Propane sales file</field>
        <field name="res_model">ss_erp.ifdb.propane.sales.header</field>
        <field name="view_mode">tree,form</field>
    </record>
    
</odoo>