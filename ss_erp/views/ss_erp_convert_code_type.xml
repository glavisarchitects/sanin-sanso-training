<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TREE VIEW -->
        <record id="ss_erp_convert_code_type_view_tree" model="ir.ui.view">
            <field name="name">ss_erp.convert.code.type.view.tree</field>
            <field name="model">ss_erp.convert.code.type</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="model"/>
                    <field name="fields"/>
                </tree>
            </field>
        </record>
        <!-- FORM VIEW -->
        <record id="ss_erp_convert_code_type_form" model="ir.ui.view">
            <field name="name">ss_erp.convert.code.type.form</field>
            <field name="model">ss_erp.convert.code.type</field>
            <field name="arch" type="xml">
                <form string="" duplicate="0">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="model"/>
                                <field name="fields"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- SEARCH VIEW -->
        <record id="ss_erp_convert_code_type_view_search" model="ir.ui.view">
            <field name="name">ss_erp.convert.code.type.view.search</field>
            <field name="model">ss_erp.convert.code.type</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="model"/>
                    <field name="fields"/>
                </search>
            </field>
        </record>
        <!-- ACTION -->
        <record id="ss_erp_convert_code_type_action" model="ir.actions.act_window">
            <field name="name">Convert Code Type</field>
            <field name="res_model">ss_erp.convert.code.type</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>