<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TREE VIEW -->
    <record id="ss_erp_ifdb_powernet_sales_detail_view_tree" model="ir.ui.view">
        <field name="name">ss_erp.ifdb.powernet.sales.detail.view.tree</field>
        <field name="model">ss_erp.ifdb.powernet.sales.detail</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="id" string="External ID" readonly="1" />
                <field name="processing_date"/>
                <field name="customer_code" readonly="1" />
                <field name="billing_summary_code" readonly="1" />
                <field name="sales_date" readonly="1" />
                <field name="status" readonly="1"
                       widget="badge"
                       decoration-info="status=='success'"
                       decoration-warning="status=='wait'"
                       decoration-danger="status=='error'" />
                 <field name="slip_type" optional="hide"/>
                <field name="slip_no" optional="hide"/>
                <field name="data_types" optional="hide"/>
                <field name="cash_classification" optional="hide"/>
                <field name="product_code" optional="hide"/>
                <field name="product_code_2" optional="hide"/>
                <field name="product_name" optional="hide"/>
                <field name="product_remarks" optional="hide"/>
                <field name="sales_category" optional="hide"/>
                <field name="quantity" optional="hide"/>
                <field name="unit_code" optional="hide"/>
                <field name="unit_price" optional="hide"/>
                <field name="amount_of_money" optional="hide"/>
                <field name="consumption_tax" optional="hide"/>
                <field name="sales_amount" optional="hide"/>
                <field name="quantity_after_conversion" optional="hide"/>
                <field name="search_remarks_1" optional="hide"/>
                <field name="search_remarks_2" optional="hide"/>
                <field name="search_remarks_3" optional="hide"/>
                <field name="search_remarks_4" optional="hide"/>
                <field name="search_remarks_5" optional="hide"/>
                <field name="search_remarks_6" optional="hide"/>
                <field name="search_remarks_7" optional="hide"/>
                <field name="search_remarks_8" optional="hide"/>
                <field name="search_remarks_9" optional="hide"/>
                <field name="search_remarks_10" optional="hide"/>
                <field name="sales_classification_code_1" optional="hide"/>
                <field name="sales_classification_code_2" optional="hide"/>
                <field name="sales_classification_code_3" optional="hide"/>
                <field name="consumer_sales_classification_code_1" optional="hide"/>
                <field name="consumer_sales_classification_code_2" optional="hide"/>
                <field name="consumer_sales_classification_code_3" optional="hide"/>
                <field name="consumer_sales_classification_code_4" optional="hide"/>
                <field name="consumer_sales_classification_code_5" optional="hide"/>
                <field name="product_classification_code_1" optional="hide"/>
                <field name="product_classification_code_2" optional="hide"/>
                <field name="product_classification_code_3" optional="hide"/>
                <field name="sale_id"/>
            </tree>
        </field>
    </record>
    <!-- ACTION -->
    <record id="ss_erp_ifdb_powernet_sales_detail_action" model="ir.actions.act_window">
        <field name="name">PowerNet Import data</field>
        <field name="res_model">ss_erp.ifdb.powernet.sales.detail</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
