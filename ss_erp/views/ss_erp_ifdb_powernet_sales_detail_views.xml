<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TREE VIEW -->
    <record id="ss_erp_ifdb_powernet_sales_detail_view_tree" model="ir.ui.view">
        <field name="name">ss_erp.ifdb.powernet.sales.detail.view.tree</field>
        <field name="model">ss_erp.ifdb.powernet.sales.detail</field>
        <field name="arch" type="xml">
            <tree create="0" string="PowerNet取込データ">
                <field name="processing_date"/>
                <field name="customer_code" readonly="1" />
                <field name="billing_summary_code" readonly="1" />
                <field name="sales_date" readonly="1" />
                <field name="status" readonly="1"
                       widget="badge"
                       decoration-info="status=='success'"
                       decoration-warning="status=='wait'"
                       decoration-danger="status=='error'" />
                 <field name="slip_type" optional="show"/>
                <field name="slip_no" optional="show"/>
                <field name="data_types" optional="show"/>
                <field name="cash_classification" optional="show"/>
                <field name="product_code" optional="show"/>
                <field name="product_code_2" optional="show"/>
                <field name="product_name" optional="show"/>
                <field name="product_remarks" optional="show"/>
                <field name="sales_category" optional="show"/>
                <field name="quantity" optional="show"/>
                <field name="unit_code" optional="show"/>
                <field name="unit_price" optional="show"/>
                <field name="amount_of_money" optional="show"/>
                <field name="consumption_tax" optional="show"/>
                <field name="sales_amount" optional="show"/>
                <field name="quantity_after_conversion" optional="show"/>
                <field name="search_remarks_1" optional="show"/>
                <field name="search_remarks_2" optional="show"/>
                <field name="search_remarks_3" optional="show"/>
                <field name="search_remarks_4" optional="show"/>
                <field name="search_remarks_5" optional="show"/>
                <field name="search_remarks_6" optional="show"/>
                <field name="search_remarks_7" optional="show"/>
                <field name="search_remarks_8" optional="show"/>
                <field name="search_remarks_9" optional="show"/>
                <field name="search_remarks_10" optional="show"/>
                <field name="sales_classification_code_1" optional="show"/>
                <field name="sales_classification_code_2" optional="show"/>
                <field name="sales_classification_code_3" optional="show"/>
                <field name="consumer_sales_classification_code_1" optional="show"/>
                <field name="consumer_sales_classification_code_2" optional="show"/>
                <field name="consumer_sales_classification_code_3" optional="show"/>
                <field name="consumer_sales_classification_code_4" optional="show"/>
                <field name="consumer_sales_classification_code_5" optional="show"/>
                <field name="product_classification_code_1" optional="show"/>
                <field name="product_classification_code_2" optional="show"/>
                <field name="product_classification_code_3" optional="show"/>
                <field name="error_message" optional="show"/>
                <field name="sale_id"/>
            </tree>
        </field>
    </record>
    <!-- ACTION -->
    <record id="ss_erp_ifdb_powernet_sales_detail_action" model="ir.actions.act_window">
        <field name="name">PowerNet取込データ</field>
        <field name="res_model">ss_erp.ifdb.powernet.sales.detail</field>
        <field name="view_mode">tree</field>
    </record>
    <record id="ss_erp_ifdb_powernet_sales_detail_view_search" model="ir.ui.view">
        <field name="name">ss_erp.ifdb.powernet.sales.detail.view.search</field>
        <field name="model">ss_erp.ifdb.powernet.sales.detail</field>
        <field name="arch" type="xml">
            <search string="">
                <group string="Group By">
                    <field name="status"/>
                    <filter name="flt_status"
                            string="ステータス"
                            context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
