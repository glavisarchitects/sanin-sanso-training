<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ss_erp_construction_workorder_form_view" model="ir.ui.view">
            <field name="name">ss.erp.construction.workorder.form</field>
            <field name="model">ss.erp.construction.workorder</field>
            <field name="arch" type="xml">
                <form string="作業オーダー詳細">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="工程"/>
                            <h1>
                                <field name="name" placeholder="工程名"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="planned_labor_costs"/>
                                <field name="result_labor_costs"/>
                                <field name="planned_expenses"/>
                                <field name="result_expenses"/>
                                <field name="construction_work_notes"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="date_planned_start"/>
                                <field name="date_planned_finished"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="duration_expected"/>
                                <field name="duration"/>
                                <field name="total_amount"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="construction_component" string="構成品">
                                <field name="move_raw_ids" widget="one2many" nolabel="1">
                                    <tree default_order="is_done,sequence" editable="bottom">
                                        <field name="product_id" force_save="1" required="1" context="{'default_type': 'product'}" attrs="{'readonly': ['|', '|', ('has_move_lines', '=', True), ('state', '=', 'cancel'), '&amp;', ('state', '!=', 'draft') ]}"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="state" invisible="1"/>
                                        <field name="has_move_lines" invisible="1"/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ss_erp_construction_workorder_tree_view" model="ir.ui.view">
            <field name="name">ss.erp.construction.workorder.tree</field>
            <field name="model">ss.erp.construction.workorder</field>
            <field name="arch" type="xml">
                <tree string="作業オーダー">
                    <field name="name"/>
                    <field name="planned_labor_costs"/>
                    <field name="result_labor_costs"/>
                    <field name="planned_expenses"/>
                    <field name="result_expenses"/>
                    <field name="date_planned_start"/>
                    <field name="date_planned_finished"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="duration_expected"/>
                    <field name="duration"/>
                    <field name="total_amount"/>
                </tree>
            </field>
        </record>

        <record id="ss_erp_construction_workorder_search_view" model="ir.ui.view">
            <field name="name">ss.erp.construction.workorder.search</field>
            <field name="model">ss.erp.construction.workorder</field>
            <field name="arch" type="xml">
                <search string="作業オーダー">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="ss_erp_construction_workorder_act_window" model="ir.actions.act_window">
            <field name="name">作業オーダー詳細</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ss.erp.construction.workorder</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="作業オーダー" id="ss_erp_construction_workorder_menu" parent="ss_erp.ss_erp_construction_root_menu"
                  action="ss_erp_construction_workorder_act_window"/>

    </data>
</odoo>