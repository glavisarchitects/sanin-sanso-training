<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="payment_journal_stream_export_form" model="ir.ui.view">
            <field name="name">payment_journal_stream_export_form</field>
            <field name="model">payment.journal.stream.export</field>
            <field name="arch" type="xml">
                <form>
                    <button name="payment_journal_stream_export" string="入金支払仕訳伝票出力" type="object" class="oe_highlight"/>
                    <group>
                        <field name="branch_id" required="1" />
                        <label for="first_day_period" string="対象期間："/>
                        <div name="filter_period" class="o_row">
                            <field name="first_day_period" required="1"/>
                            <h2>~</h2>
                            <field name="last_day_period" required="1"/>
                        </div>
                    </group>
                    <footer>
                        <button string="取消" class="oe_link" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>


        <record id="ss_erp_payment_journal_stream_export_action" model="ir.actions.act_window">
            <field name="name">入金支払仕訳伝票出力</field>
            <field name="res_model">payment.journal.stream.export</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
